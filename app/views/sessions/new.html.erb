<div class="signin-container">
  <div class="social-signin">
    <h3>Signin with:</h3>
    <ul>
      <li><%= link_to image_tag('auth_buttons/facebook_64.png', alt: 'Facebook'), '/auth/facebook', id: 'connect-fb', 'data-app-id' => '230323537123423' %></li>
      <li><%= link_to image_tag('auth_buttons/google_plus_64.png', alt: 'Google+'), '#', id: 'connect-gplus',
                                'data-clientid' => '20406359348-tvaieap39rhot704r9oept07unh1mbkb.apps.googleusercontent.com',
                                'data-cookiepolicy' => 'single_host_origin',
                                'data-requestvisibleactions' => 'http://schemas.google.com/AddActivity',
                                'data-scope' => 'https://www.googleapis.com/auth/plus.login https://www.googleapis.com/auth/userinfo.email' %></li>
    </ul>
  </div>
  <div class=signin-form>
    <%= render partial: 'shared/display_flash_msg' %>
    <%= form_tag create_session_path do %>
      <div class="form-row">
        <div class="row-label label"><%= label_tag :email %>:</div>
        <div class="row-field"><%= text_field_tag :email, "", class: "validate[required,custom[email]]" %></div>
      </div>
      <div class="form-row">
        <div class="row-label label"><%= label_tag :password %>:</div>
        <div class="row-field"><%= password_field_tag :password, "", class: "validate[required]" %></div>
      </div>
      <div class="action-bar">
        <%= submit_tag 'Connect', id: 'connect-me' %>
      </div>
    <% end -%>
  </div>
</div>
